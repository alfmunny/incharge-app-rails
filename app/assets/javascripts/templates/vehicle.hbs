<div class="container-fluid">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">PROFILE</h4>
      {{#if 'isEditing'}}
      <button class="btn btn-primary btn-sm"{{action 'doneEditing'}}>Done</button>
      <button class="btn btn-primary btn-sm"{{action 'cancel'}}>Cancel</button>
      {{else}}
      <button class="btn btn-primary btn-sm"{{action 'edit'}}>Edit</button>
      {{/if}}
    </div>
    <div class="panel-body">
      {{#if 'isEditing'}}
        {{partial 'vehicle/edit'}}
      {{else}}
        {{partial 'vehicle/view'}}
      {{/if}}
    </div>
    <!-- <div class="">
        <img src="assets/Citroen C-Zero.jpg" alt="" />
    </div> -->
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">TRANSACTIONS</h4>
    </div>
    <div class="panel-body">
      {{#each trades}}
        <p>
          {{#link-to 'trade' this}}{{id}}<span class="small"> at {{date createdAt}}</span>{{/link-to}}
        </p>
      {{/each}}
    </div>
  </div>
</div>
