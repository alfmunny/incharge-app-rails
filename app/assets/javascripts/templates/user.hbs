<div class="container-fluid">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h5 class="panel-title">PROFILE
      {{#if 'isEditing'}}
      <button class="btn btn-success btn-sm"{{action 'doneEditing'}}>Done</button>
      <button class="btn btn-primary btn-sm"{{action 'cancel'}}>Cancel</button>
      {{else}}
      <button class="btn btn-primary btn-sm"{{action 'edit'}}>Edit</button>
      {{/if}}
      </h5>
    </div>
      <div class="panel-body">
        <div class="col-md-9">
      {{#if 'isEditing'}}
        {{partial 'user/edit'}}
      {{else}}
        {{partial 'user/view'}}
      {{/if}}
        </div>
      </div>
    </table>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h5 class="panel-title">
        VEHICLES
        <!-- <button class="btn btn-primary btn-sm" {{action 'addVehicle'}}>Add Vehicle</button> -->
      </h5>
    </div>
    <div class="panel-body">
      {{#if 'vehicleAdding'}}
      <p>
        please enter the name of a existing vehicle: {{input valueBinding='newVehicleId' cols="30" }}
        <button class="btn btn-success btn-sm"{{action 'doneVehicleAdding'}}>Done</button>
        <button class="btn btn-primary btn-sm"{{action 'cancelVehicleAdding'}}>cancel</button>
      </p>
      {{/if}}
      {{#each vehicles}}
        <p>
          {{#link-to 'vehicle' this }}{{name}}{{/link-to}}
        </p>
      {{/each}}
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h5 class="panel-title">CHARGE POINTS</h5>
    </div>
    <div class="panel-body">
      {{#each chargePoints}}
        <p>
          {{#link-to 'charge-point' this }}{{name}}{{/link-to}}
        </p>
      {{/each}}
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="panel-title">
        <a data-toggle="collapse" href="#transaction-list">
          <h5 class="panel-title">TRANSACTIONS</h5>
        </a>
      </div>
    </div>
    <div id="transaction-list" class="collapse in">
      <div class="panel-body">
        {{#each trades}}
          <p>
            {{#link-to 'trade' this }}{{id}}
            <span class="small"> at {{date createdAt}}, </span>{{/link-to}}
            <span>{{bill}} â‚¬, </span>
            <span>{{energy}} kWh</span>
          </p>
        {{/each}}
      </div>
    </div>
  </div>
  <button class="btn btn-danger btn-sm"{{action 'destroy'}}>Delete User</button>
</div>
